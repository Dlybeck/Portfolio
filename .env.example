# ================================
# DEV DASHBOARD SECURITY SETTINGS
# ================================

# IMPORTANT: Copy this file to .env and fill in your values
# NEVER commit .env to git (already in .gitignore)

# JWT Secret (Generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-change-this-immediately

# Authentication
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Dashboard Credentials
DASHBOARD_USERNAME=admin
# Generate hash with: python -c "from passlib.context import CryptContext; print(CryptContext(schemes=['bcrypt']).hash('your_password'))"
DASHBOARD_PASSWORD_HASH=

# TOTP 2FA Secret (Generate with: python -c "import pyotp; print(pyotp.random_base32())")
TOTP_SECRET=

# Rate Limiting
MAX_LOGIN_ATTEMPTS=3
LOCKOUT_DURATION_MINUTES=15

# Session Management
MAX_DEVICES_PER_USER=3
AUTO_LOGOUT_IDLE_MINUTES=10

# Network Security
# Dashboard will only listen on Tailscale interface
BIND_HOST=127.0.0.1  # Change to 0.0.0.0 if using Tailscale
BIND_PORT=8080

# Optional: Additional IP whitelist (Tailscale IPs: 100.x.x.x)
ALLOWED_IPS=

# Command Safety
BLOCK_DANGEROUS_COMMANDS=true
REQUIRE_CONFIRMATION_FOR_DESTRUCTIVE=true
LOG_ALL_COMMANDS=true
READ_ONLY_MODE=false

# AI Integration
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Logging & Monitoring
LOG_LEVEL=INFO
LOG_FILE=logs/dashboard.log
ALERT_EMAIL=
ALERT_ON_FAILED_LOGIN=true
ALERT_ON_NEW_DEVICE=true

# Development
DEBUG=false
